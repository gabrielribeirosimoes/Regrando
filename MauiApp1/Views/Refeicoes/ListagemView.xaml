<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Refeicoes.ListagemView"
             Title="ListagemView">
    <Shell.TitleView>
        <Button Command="{Binding NovaRefeicao}" Text="Novo" HorizontalOptions="End"/>
    </Shell.TitleView>
    <ScrollView>
        <VerticalStackLayout Padding="10, 0, 0, 0" VerticalOptions="FillAndExpand">
            <ListView x:Name="listView" HasUnevenRows="True" ItemsSource="{Binding Refeicoes}"
                      SelectedItem="{Binding RefeicaoSelecionado}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" IsDestructive="True" Command="{Binding Path=BindingContext.RemoverPersonagemCommand, Source={x:Reference listView}}"
              CommandParameter="{Binding .}"></MenuItem>
                            </ViewCell.ContextActions>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Id}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Carboidratos}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Gorduras}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Proteinas}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Calorias}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Fibras}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Sodio}" FontSize="18" FontAttributes="Bold"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>