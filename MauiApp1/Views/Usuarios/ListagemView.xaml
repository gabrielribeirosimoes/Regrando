<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Usuarios.ListagemView"
             Title="Perfil">

    <ScrollView>
        <StackLayout>
            <Frame Padding="0" CornerRadius="15" BackgroundColor="#E0FFFF" Margin="5" HasShadow="True">
                <StackLayout>
                    <Frame CornerRadius="15"
       HeightRequest="200"
       HorizontalOptions="FillAndExpand"
       VerticalOptions="Start">

                        <Image Source="profile.png"
           Aspect="AspectFit"
           VerticalOptions="FillAndExpand"
           HorizontalOptions="FillAndExpand" />

                    </Frame>

                    <StackLayout Margin="20,40">

                        <Label Text="Peso (kg)" FontSize="Medium" />
                        <Entry Placeholder="Digite o peso" />

                        <Label Text="Altura (cm)" FontSize="Medium" Margin="0,10,0,0" />
                        <Entry Placeholder="Digite a altura" />

                        <Label Text="Objetivo" FontSize="Medium" Margin="0,10,0,0" />
                        <Entry Placeholder="Digite o objetivo" />

                        <Button Text="Salvar" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />

                    </StackLayout>

                </StackLayout>

            </Frame>

        </StackLayout>

    </ScrollView>

</ContentPage>
