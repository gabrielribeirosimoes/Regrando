<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Receitas.CadastroReceitaView"
             Shell.PresentationMode="Animated"
             Title="CadastroReceitaView">
    <ScrollView>
        <VerticalStackLayout Spacing="3" Padding="15">
            <Label Text="NÂ° da Receita" FontSize="Medium" />
            <Entry Text="{Binding Id}" FontSize="Medium" />
            <Label Text="Nome" FontSize="Medium" />
            <Entry Text="{Binding Nome}" FontSize="Medium" />
            <Label Text="Descricao" FontSize="Medium" />
            <Entry Text="{Binding Descricao}" FontSize="Medium" />
            <HorizontalStackLayout Spacing="20">
                <Button Text="Salvar" Command="{Binding SalvarCommand}"></Button>
                <Button Text="Cancelar" Command="{Binding CancelarCommand}"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>